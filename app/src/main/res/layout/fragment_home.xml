<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/search_tag_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:text="태그 검색 |"
                android:textColor="@color/primary"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/search_dest_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="5dp"
                android:text="여행지 검색 |"
                android:textColor="#959595"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/search_writer_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:text="글 작성자"
                android:textColor="#959595"
                android:textSize="13dp" />

        </LinearLayout>

        <!-- 검색바 테두리 -->
        <FrameLayout
            android:id="@+id/search_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#86AED8"
            android:padding="1.7dp"
            android:layout_alignParentTop="true"
            android:clickable="false"
            android:focusable="true">

            <!-- 검색바 (SearchView) -->
<!--            <androidx.appcompat.widget.SearchView-->
<!--                android:id="@+id/search_view"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="#ffffff"-->
<!--                android:imeOptions="actionSearch"-->
<!--                android:inputType="text"-->
<!--                android:iconifiedByDefault="false"-->
<!--                android:queryBackground="@null"-->
<!--                android:queryHint="검색어를 입력하세요"-->
<!--                android:focusableInTouchMode="true" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="7dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/search_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/search_icon" />

                <!-- 검색바 (SearchView) -->
                <EditText
                    android:id="@+id/search_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:inputType="text"
                    android:background="#ffffff"
                    android:imeOptions="actionSearch"
                    android:hint="검색어를 입력하세요." />

            </LinearLayout>

        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="추천 검색어   제주도  식도락  휴식"
            android:textSize="13dp" />

    </LinearLayout>

    <!--  핫토픽 => 프레그먼트, 스와이프로 넘기면서 변경   -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/category_1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="7dp">

                    <ImageView
                        android:src="@drawable/cloud"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/text_view_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="서울"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/category_2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="7dp">

                    <ImageView
                        android:src="@drawable/cloud"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/text_view_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="부산"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/category_3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="7dp">

                    <ImageView
                        android:src="@drawable/cloud"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/text_view_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제주도"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/category_4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="7dp">

                    <ImageView
                        android:src="@drawable/cloud"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/text_view_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="강릉"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/category_5"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="7dp">

                    <ImageView
                        android:src="@drawable/cloud"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/text_view_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전주"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/category_6"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="7dp">

                    <ImageView
                        android:src="@drawable/cloud"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/text_view_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="경주"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>