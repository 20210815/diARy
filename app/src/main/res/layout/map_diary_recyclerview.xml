<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_img"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/example"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_img"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:text="작성자"/>
    <TextView
        android:id="@+id/map_diary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_img"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="12dp"
        android:text="Some quick example text to build on the card title and make up the bulk of the card's content."/>
    <TextView
        android:id="@+id/map_diary_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_diary_text"
        android:layout_alignParentRight="true"
        android:textSize="10dp"
        android:text="여행기간: 2022.07.10~2022.07.12"/>
</RelativeLayout>