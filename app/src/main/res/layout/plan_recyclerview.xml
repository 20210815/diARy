<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:id="@+id/plan_cardView2"
        android:layout_width="310dp"
        android:layout_height="85dp"
        app:cardCornerRadius="0dp"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="45dp"
        app:cardElevation="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false" >

                <TextView
                    android:id="@+id/plan_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="여행지명"
                    android:textSize="23dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비공개"
                    android:textSize="10dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/plan_like_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="♥ "
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/plan_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_plan_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="여행기간: "
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/plan_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/search_plan_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/plan_hash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:text="#제주도 #휴식 #식도락"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by "
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/plan_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성자"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:cardCornerRadius="100dp"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="5dp"
        app:cardElevation="5dp" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/plan_img"
            app:civ_border_width="3dp"
            app:civ_border_color="#ffffff"
            app:civ_border_overlay="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/cloud" />

    </androidx.cardview.widget.CardView>

</FrameLayout>