<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".DetailPlanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/plan_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="여행지명"
            android:textColor="#191919"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="♥ "
            android:textSize="13dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/plan_detail_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요 수 "
            android:textSize="13dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/plan_mod_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="수정하기 / "
            android:visibility="visible" />

        <TextView
            android:id="@+id/plan_remove_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="삭제하기"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/plan_detail_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="작성자의 코멘트"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/plan_wish_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="13dp"
            android:text="일정담기"
            android:visibility="gone" />

        <TextView
            android:id="@+id/plan_detail_slash"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="13dp"
            android:text=" / "
            android:visibility="gone" />

        <TextView
            android:id="@+id/plan_map_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="13dp"
            android:text=" 지도보기 " />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/plan_detail_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:text="by " />

        <TextView
            android:id="@+id/plan_detail_writer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="작성자명" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:text="여행기간: " />

        <TextView
            android:id="@+id/plan_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:text="출발일 ~ 도착일" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/plan_detail_my_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/calender_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="여행기간: "
            android:textColor="#1E1E1E"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/plan_detail_my_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" "
            android:textSize="13dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plan_detailRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/plan_detail_hash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="#1E1E1E"
        android:text="#"
        android:textSize="13dp" />

</LinearLayout>